<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stevendeweillepset6.LogInFragment"
    android:background="@color/grayBlue">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please enter your email and password."
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:textColor="@color/poisonGreen"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:gravity="center">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email address"
            android:paddingHorizontal="10dp"
            android:textColorHint="@color/grayBlue"
            android:background="@color/poisonGreen"
            android:inputType="textEmailAddress"
            android:id="@+id/email"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColorHint="@color/grayBlue"
            android:background="@color/poisonGreen"
            android:id="@+id/password"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/grayBlue"
            android:backgroundTint="@color/poisonGreen"
            android:layout_gravity="right"
            android:id="@+id/login_confirm"
            />
    </LinearLayout>
</FrameLayout>
