<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stevendeweillepset6.SignUpFragment"
    android:background="@color/grayBlue">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SIGN UP"
            android:textSize="36dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/poisonGreen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/poisonGreen"
            android:layout_gravity="left"
            android:text="Please enter your email address and password to sign up. Your password must be longer than 6 characters."/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter email address"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/grayBlue"
                android:background="@color/poisonGreen"
                android:inputType="textEmailAddress"
                android:id="@+id/emailSignUp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/grayBlue"
                android:background="@color/poisonGreen"
                android:id="@+id/password1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Repeat password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/grayBlue"
                android:background="@color/poisonGreen"
                android:id="@+id/password2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:layout_marginTop="15dp"
                android:textColor="@color/grayBlue"
                android:backgroundTint="@color/poisonGreen"
                android:layout_gravity="right"
                android:id="@+id/signup_confirm"
                />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>
